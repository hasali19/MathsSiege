@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Question";
}

<h1 class="display-4 mb-5">Delete Question</h1>

<div class="row">
    <div class="col-md-6 col-sm-12">
        <form method="post">
            <p>Are you sure you want to delete this question?</p>
            <p>Deleting this question will delete any game session answers that depend on it.<br />Consider marking it inactive instead, to stop it being used in game.</p>
            <button type="submit" class="btn btn-danger float-right mt-4">Delete</button>
            <a class="btn btn-warning float-right mt-4 mr-2" asp-page="/Questions/Edit" asp-route-id="@Model.Id">Mark Inactive</a>
            <a class="btn btn-success float-right mt-4 mr-2" asp-page="./Index">Cancel</a>
        </form>
    </div>
</div>
