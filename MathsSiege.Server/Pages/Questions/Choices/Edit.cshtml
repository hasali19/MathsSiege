@page "{id:int}"
@model EditModel
@{
    ViewData["Title"] = "Edit Choice";
}

<h1 class="display-4 mb-5">Edit Choice</h1>

<div class="row">
    <div class="col-md-6 col-sm-12">
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            @if (ViewData.ContainsKey("UpdateSuccess") && (bool)ViewData["UpdateSuccess"] == true)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    Successfully updated!
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <input type="hidden" asp-for="Choice.Id" />
            <div class="form-group mt-4">
                <label asp-for="Choice.Text"></label>
                <input class="form-control" asp-for="Choice.Text" placeholder="Enter answer" />
            </div>
            <div class="form-group mt-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Choice.IsCorrect" />
                    <label class="form-check-label" asp-for="Choice.IsCorrect"></label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right mt-4">Save</button>
            <a class="btn btn-warning float-right mt-4 mr-4" asp-page="/Questions/Edit" asp-route-id="@Model.Choice.QuestionId">Back</a>
        </form>
    </div>
</div>
