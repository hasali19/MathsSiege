@page
@model CreateModel
@{
    ViewData["Title"] = "Create Choice";
}

<h1 class="display-4 mb-5">Create Choice</h1>

<div class="row">
    <div class="col-md-6 col-sm-12">
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group mt-4">
                <label asp-for="Choice.Text"></label>
                <input class="form-control" asp-for="Choice.Text" placeholder="Enter answer" />
            </div>
            <div class=" form-group mt-4">
                <div class="form-check">
                    <input class="form-check-input" asp-for="Choice.IsCorrect" />
                    <label class="form-check-label" asp-for="Choice.IsCorrect"></label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right mt-4">Create</button>
        </form>
    </div>
</div>
