@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Choice";
}

<h1 class="display-4 mb-5">Delete Choice</h1>

<div class="row">
    <div class="col-md-6 col-sm-12">
        <form method="post">
            <p>Are you sure you want to delete this choice?</p>
            <button type="submit" class="btn btn-danger float-right mt-4">Delete</button>
        </form>
    </div>
</div>
