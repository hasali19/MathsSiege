@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row h-100 align-items-center">
    <div class="col-md-4 offset-md-4 col-sm-12">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <h3 class="mt-3">Login</h3>
                    <div class="text-danger">@(ViewData.ContainsKey("ErrorMessage") ? ViewData["ErrorMessage"] : "")</div>
                    <div class="form-group mt-4">
                        <label asp-for="UserModel.Username"></label>
                        <input class="form-control" asp-for="UserModel.Username" />
                    </div>
                    <div class="form-group mt-4">
                        <label asp-for="UserModel.Password"></label>
                        <input class="form-control" asp-for="UserModel.Password" />
                    </div>
                    <button type="submit" class="btn btn-primary float-right mt-4">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
