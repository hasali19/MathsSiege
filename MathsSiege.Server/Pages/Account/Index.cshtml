@page
@model IndexModel
@{
    ViewData["Title"] = "Account Overview";
}

<h1 class="display-4 mb-5">Account Overview</h1>

<div class="row">
    <div class="col-md-3 col-sm-12">
        <div class="list-group">
            <a class="list-group-item list-group-item-action active" asp-page="/Account/Index">Account Overview</a>
            <a class="list-group-item list-group-item-action" asp-page="/Account/Users/Index">All Users</a>
        </div>
    </div>
    <div class="col-md-6 offset-md-1 col-sm-12">
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <input type="hidden" asp-for="UserModel.Id" />
            <input type="hidden" asp-for="UserModel.Role" />
            <div class="form-group mt-4">
                <label asp-for="UserModel.Username"></label>
                <input class="form-control" asp-for="UserModel.Username" placeholder="Enter username" />
            </div>
            <div class="form-group mt-4">
                <label asp-for="UserModel.Password"></label>
                <input class="form-control" asp-for="UserModel.Password" placeholder="Enter a new password" />
            </div>
            <button type="submit" class="btn btn-primary float-right mt-4">Save</button>
        </form>
    </div>
</div>
