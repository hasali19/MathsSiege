@page "{id:int}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Game Session";
}

<h1 class="display-4 mb-5">Delete Game Session</h1>

<div class="row">
    <div class="col-md-6 col-sm-12">
        <form method="post">
            <p>Are you sure you want to delete this game session?</p>
            <button type="submit" class="btn btn-danger float-right mt-4">Delete</button>
            <a class="btn btn-success float-right mt-4 mr-2" asp-page="./Index">Cancel</a>
        </form>
    </div>
</div>
